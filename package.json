{
  "name": "create-compiled-node-project",
  "version": "3.0.4",
  "main": "lib/index.js",
  "license": "MIT",
  "files": [
    "lib/*",
    "lib/resources/.*",
    "lib/resources/.gitignore"
  ],
  "bin": {
    "create-compiled-node-project": "lib/index.js"
  },
  "scripts": {
    "build": "swc --copy-files --include-dotfiles --source-root ./src src -d lib/",
    "prepublishOnly": "npm run build; npm run compile",
    "dev": "npm run build; node lib/index.js",
    "compile": "npm run build; ncc build lib/index.js -o lib",
    "lint": "pretty-quick --check src/"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.49",
    "@swc/core": "^1.2.84",
    "@vercel/ncc": "^0.30.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "dependencies": {
    "await-exec": "^0.1.2",
    "chalk": "^4.0.0",
    "chokidar": "^3.5.2",
    "regenerator-runtime": "^0.13.9",
    "yargs": "^15.3.1"
  }
}
